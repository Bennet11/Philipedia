<div class="container">
  <div class="col-md-4">
    <% if policy(@wiki).update? %>
    <%= link_to "Edit PhiliWiki", edit_wiki_path, class: 'btn btn-primary' %>
    <% end %>
    <%= link_to "Delete PhiliWiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'You are about to delete a PhiliWiki do you want to proceed?'} %>
  </div>

  <div class="col-md-4">
    <h1><%= markdown_to_html @wiki.title %></h2>
  </div>

  <div class="col-md-4">
    <h4>Collaborators:</h4>
    <% @collaborators.each do |collaborator| %>
      <p><%= collaborator.email %></p>
    <% end %>
  </div>

  <div class="col-md-8">
    <p><%= markdown_to_html @wiki.body %></p>
  </div>
</div>
